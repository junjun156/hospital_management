<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_hospital_appointment_tree" model="ir.ui.view">
        <field name="name">hospital.appointment.tree</field>
        <field name="model">hospital.appointment</field>
        <field name="arch" type="xml">
            <tree>
                <field name="ref"/>
                <field name="patient_id" string="Patient"/>
                <field name="date"/>
            </tree>
        </field>
    </record>

    <record id="view_hospital_appointment_form" model="ir.ui.view">
        <field name="name">hospital.appointment.form</field>
        <field name="model">hospital.appointment</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button type="object" name="complete_appointment"
                                string="Done" class="oe_button oe_form_button"
                                icon="fa-check-circle"/>
                    </div>
                    <group>
                        <group>
                            <field name="ref"/>
                            <field name="patient_id" string="Patient"/>
                            <field name="active"/>
                        </group>
                        <group>
                            <field name="date"/>
                            <field name="description"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_hospital_appointment_search" model="ir.ui.view">
        <field name="name">hospital.appointment.search</field>
        <field name="model">hospital.appointment</field>
        <field name="arch" type="xml">
            <search>
                <field name="ref" string="Appointment ID"/>
                <field name="patient_id" string="Patient"
                       filter_domain="['|', ('patient_id.name','ilike',self), ('patient_id.ref','ilike',self)]"/>
                <filter name='filter_today' string="Today"
                        domain="[('date', '&gt;=', datetime.datetime.now().strftime('%Y-%m-%d 00:00:00')),('date', '&lt;=',datetime.datetime.now().strftime('%Y-%m-%d 23:59:59'))]"/>
                <separator/>
                <filter name="filter_active" string="Archived" domain="[('active', '=', False)]"/>
                <group expand="0" string="Group By">
                    <filter name="group_by_patient" string="Patient" context="{'group_by':'patient_id'}"/>
                </group>
            </search>
        </field>
    </record>


    <record id="action_hospital_appointment" model="ir.actions.act_window">
        <field name="name">Appointment</field>
        <field name="res_model">hospital.appointment</field>
        <field name="type">ir.actions.act_window</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Insert your first Appointment
            </p>
        </field>
    </record>

    <menuitem id="menu_appointment"
              name="Appointment"
              action="action_hospital_appointment"
              parent="menu_patient_master"
              sequence="0"/>


</odoo>