<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_language_spoken_tree" model="ir.ui.view">
        <field name="name">language.spoken.tree</field>
        <field name="model">language.spoken</field>
        <field name="arch" type="xml">
            <tree string="Tags" editable="bottom" sample="1">
                <field name="name"/>
                <field name="color" widget="color_picker"/>
            </tree>
        </field>
    </record>

    <record id="action_language_spoken" model="ir.actions.act_window">
        <field name="name">Language Spoken</field>
        <field name="res_model">language.spoken</field>
        <field name="type">ir.actions.act_window</field>
        <field name="view_mode">tree</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first Language!
            </p>
        </field>
    </record>

    <menuitem id="menu_language_spoken"
              name="Language Spoken"
              action="action_language_spoken"
              parent="menu_configuration_master"
              sequence="0"/>


</odoo>