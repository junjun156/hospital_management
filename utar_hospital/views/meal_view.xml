<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_hospital_meal_tree" model="ir.ui.view">
        <field name="name">hospital.meal.tree</field>
        <field name="model">hospital.meal</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="meal_type"/>
                <field name="meal_size"/>
                <field name="is_muslim"/>
            </tree>
        </field>
    </record>

    <record id="view_hospital_meal_form" model="ir.ui.view">
        <field name="name">hospital.meal.form</field>
        <field name="model">hospital.meal</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="meal_type"/>
                        </group>
                        <group>
                            <field name="meal_size"/>
                        </group>
                    </group>
                    <group>
                        <group>
                            <field name="meal_price"/>
                        </group>
                        <group>
                            <field name="is_muslim"/>
                        </group>
                    </group>
                    <group>
                        <group>
                            <h3>Set</h3>
                            <field name="breakfast"/>
                            <field name="lunch"/>
                            <field name="dinner"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>


    <record id="action_hospital_meal" model="ir.actions.act_window">
        <field name="name">Meal</field>
        <field name="res_model">hospital.meal</field>
        <field name="type">ir.actions.act_window</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Insert your first meal!
            </p>
        </field>
    </record>


    <menuitem id="menu_meal"
              name="Meal"
              action="action_hospital_meal"
              parent="menu_configuration_master"
              sequence="1"/>
</odoo>